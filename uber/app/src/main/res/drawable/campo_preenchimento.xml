<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado focado (quando o usuário clica) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Fundo branco -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Borda preta -->
            <corners android:radius="8dp"/>
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>

    <!-- Estado normal (sem foco) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Fundo cinza claro -->
            <stroke android:width="2dp" android:color="#E0E0E0"/> <!-- Borda invisível -->
            <corners android:radius="8dp"/>
            <padding android:left="16dp" android:right="16dp"/>
        </shape>
    </item>

</selector>
